<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>	
    <script src="@Url.Content("~/Scripts/jquery.json-2.3.min.js")" type="text/javascript""></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
</head>
<body>
        <div id="header">
            <div id="logo-wrapper">
                <img src="@Url.Content("~/Content/images/logo.gif")" alt="PaidThx Logo" />
            </div>
            <div id="social-icons-wrapper">
                <dl>
                    <dd>
                        <img class="social-icon" src="@Url.Content("~/Content/images/google-plus-icon.gif")" alt="Google+ Icon" />
                    </dd>
                    <dd>
                        <img class="social-icon" src="@Url.Content("~/Content/images/facebook-icon.gif")" alt="Facebook Icon" /></dd>
                    <dd>
                        <img class="social-icon" src="@Url.Content("~/Content/images/twitter-icon.gif")" alt="Twitter Icon" /></dd>
                </dl>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
            <div id="footer-content">
            <div id="footer-menu">
                <a href="@Url.Content("~/")">Home</a> | <a href="http://beta.paidthx.com/mobile">
                    Mobile Site</a>
            </div>
            <div id="footer-copyright">
                &copy; 2012 PaidThx, LLC - All right reserved
            </div>
            </div>
        </div>
</body>
</html>
