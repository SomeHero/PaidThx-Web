<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>	
    <script src="@Url.Content("~/Scripts/jquery.json-2.3.min.js")" type="text/javascript""></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
</head>
<body>
        <div id="header">
            <div id="logo-wrapper">
                <img src="@Url.Content("~/Content/images/logo.gif")" alt="PaidThx Logo" />
            </div>
            <div id="social-icons-wrapper">
                <dl>
                    <dd id="social-google" class="social-icon">
                       <a class="social-icon-link" href="https://plus.google.com/117087643073156405294/posts" title="PaidThx on Google +"></a> 
                    </dd>
                    <dd id="social-fb" class="social-icon">
                      <a class="social-icon-link" href="http://www.facebook.com/paidthx" title="PaidThx on Facebook"></a>  
                    <dd id="social-tw" class="social-icon">
                    <a class="social-icon-link" href="http://www.twitter.com/paidthx" title="PaidThx on Twitter"></a>
                        </dd>
                </dl>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
            <div id="footer-content">
            <div id="footer-menu">
                <a href="@Url.Content("~/")">Home</a> | <a href="http://beta.paidthx.com/mobile">
                    Mobile Site</a>
            </div>
            <div id="footer-copyright">
                &copy; 2012 PaidThx, LLC - All right reserved
            </div>
            </div>
        </div>
</body>
</html>
