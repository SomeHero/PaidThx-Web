<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @RenderSection("Header", required: false)
    <meta name="description" content="At PaidThx, we believe you should be able to send and receive money whenever you want, wherever you want. Whether you owe a few bucks to a friend or want to donate to your favorite cause, it should be as simple as the swipe of a finger shouldn’t cost you a penny." />
    <meta name="keywords" content="social payment, mobile banking, free money transfer, android, iphone, app, transfer money between friends" />
    <meta name="google-site-verification" content="nz9dUDlSHHw-IJOKYUDjk2ERBXR_IHVTCw7ajItazKc" /> 
     <link href="@Url.Content("~/Styles/jquery.qtip.min.css")" rel="stylesheet" type="text/css" />
     <link rel="stylesheet" href="@Url.Content("~/Styles/prettyPhoto.css")" type="text/css" media="screen" title="prettyPhoto main stylesheet" charset="utf-8" />
    <link href="@Url.Content("~/Styles/Site.css")" rel="stylesheet" type="text/css" />
    <link href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700|Droid+Sans+Mono|Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" type="image/x-icon" href="/Content/images/favicon.ico">
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>	
    <script src="@Url.Content("~/Scripts/jquery.prettyPhoto.js")" type="text/javascript" charset="utf-8"></script>
    <script src="@Url.Content("~/Scripts/jquery.json-2.3.min.js")" type="text/javascript""></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script type="text/javascript">

        var _gaq = _gaq || [];
          var trackingCode = '@System.Web.Configuration.WebConfigurationManager.AppSettings["GoogleAnalyticsKey"]';
        _gaq.push(['_setAccount', trackingCode]);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

</script>
</head>
<body>
        <div id="header">
            <div id="logo-wrapper">
                <img src="@Url.Content("~/Content/images/logo.gif")" alt="PaidThx Logo" />
            </div>
            <div id="social-icons-wrapper">
                <dl>
                    <!--<dd id="social-google" class="social-icon">
                       <a target="_blank" class="social-icon-link" href="https://plus.google.com/117087643073156405294/posts" title="PaidThx on Google +"></a> 
                    </dd>-->
                    <dd id="social-fb" class="social-icon">
                      <a target="_blank" class="social-icon-link" href="http://www.facebook.com/paidthx" title="PaidThx on Facebook"></a>  
                    <dd id="social-tw" class="social-icon">
                    <a target="_blank" class="social-icon-link" href="http://www.twitter.com/paidthx" title="PaidThx on Twitter"></a>
                        </dd>
                </dl>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
            <div id="footer-content">
            <div id="footer-menu">
                <a href="@Url.Content("~/")">Home</a> | <a title="Send us a note" href="mailto:info@paidthx.com">
                    Contact Us</a>
            </div>
            <div id="footer-copyright">
                &copy;2012 PaidThx - All Rights Reserved
            </div>
            </div>
        </div>

<!--SCRIPTS-->
<script type="text/javascript" src="/Scripts/jquery.qtip.min.js"></script>
<script src="@Url.Content("~/Scripts/home.js")" type="text/javascript"></script>
@RenderSection("EndScripts", required: false)
</body>
</html>
